<header class="py-3">
    <h2 id="" class="text-center">Administraci칩n</h2>
</header>


<main class="container">
    <table class="table custom-table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Foto</th>
                <th scope="col">Nombre</th>
                <th scope="col">A침os de experiencia</th>
                <th scope="col">Especialidad</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            {{#each participantes}}
            <tr class="align-middle">
                <th scope="row">{{this.id}}</th>
                {{#if this.foto}}
                <td><img src="/avatars/{{foto}}" alt="Foto de perfil"></td>
                {{else}}
                <td><img src="/avatars/sin_foto.jpeg" alt="Sin foto" width="40px"></td>
                {{/if}}
                <td>{{this.nombre}}</td>
                <td>{{this.experiencia}}</td>
                <td>{{this.especialidad}}</td>
                {{#ifCond this.estado "==" "Aprobado"}}
                <td><input type="checkbox" id="checkbox" name="checkbox" checked></td>
                {{else}}
                <td><input type="checkbox" id="checkbox" name="checkbox"></td>
                {{/ifCond}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</main>

